@model Hamburgerci.Application.Models.VMs.EkstraMalzemeListingVM

<div class="card shadow">
	<div class="card-header py-3">
		<p class="text-primary m-0 fw-bold">Yeni Ekstra Malzeme Ekle</p>
	</div>
	<div class="card-body">
		<form asp-action="EkstraMalzemeEkle" asp-controller="EkstraMalzeme" method="post">
			<div class="form-group">
				<label asp-for="EkstraMalzeme">Ekstra Malzeme Adı:</label>
				<input type="text" class="form-control" asp-for="EkstraMalzeme.Adi" />
			</div>

			<div class="form-group">
				<label asp-for="EkstraMalzeme.Fiyati">Ekstra Malzeme Fiyatı:</label>
				<input type="number" class="form-control" asp-for="EkstraMalzeme.Fiyati" min="1" />
			</div>
			<button type="submit" class="btn-primary btn-block">Ekle</button>
		</form>
	</div>
	<div class="card-footer">
	</div>
</div>