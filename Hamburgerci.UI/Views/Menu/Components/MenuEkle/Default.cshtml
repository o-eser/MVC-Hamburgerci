@model MenuListingVM


<div class="card shadow">
	<div class="card-header py-3">
		<p class="text-primary m-0 fw-bold">Yeni Menü Ekle</p>
	</div>
	<div class="card-body">
		<form asp-action="MenuEkle" asp-controller="Menu"	 method="post">
			<div class="form-group">
				<label asp-for="Menu.MenuAdi">Adı:</label>
				<input type="text" class="form-control" asp-for="Menu.MenuAdi" />
			</div>

			<div class="form-group">
				<label asp-for="Menu.MenuFiyati">Menü Fiyatı:</label>
				<input type="text" class="form-control" asp-for="Menu.MenuFiyati" />
			</div>
			<div>
				<label asp-for="Menu.ParaBirimi">Para Birimi:</label>
				<select class="form-control" asp-for="Menu.ParaBirimi" asp-items="@Html.GetEnumSelectList<ParaBirimi>()"></select>
			</div>
			<button type="submit" class="btn-primary btn-block">Create</button>
		</form>
	</div>
	<div class="card-footer">
	</div>
</div>