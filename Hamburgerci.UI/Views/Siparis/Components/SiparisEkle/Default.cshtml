@model SiparisListingVM


<div class="card shadow">
	<div class="card-header py-3">
		<p class="text-primary m-0 fw-bold">Yeni Sipariş Ekle</p>
	</div>
	<div class="card-body">
		<form asp-action="SiparisEkle" asp-controller="Siparis" method="post">
			<div class="form-group">
				<label asp-for="CreateSiparis.MenuBoyutu">Menu Boyutu:</label>
				<select class="form-control" asp-for="CreateSiparis.MenuBoyutu" asp-items="@Html.GetEnumSelectList<MenuBoyutu>()"></select>
			</div>

			<div class="form-group">
				<label asp-for="CreateSiparis.SiparisAdeti">Sipariş Adeti:</label>
				<input type="number" class="form-control" asp-for="CreateSiparis.SiparisAdeti" />
			</div>
			<div>


				<div class="accordion accordion-flush" id="accordionFlush">
					<div class="accordion-item">
						<h2 class="accordion-header" id="flush-headingOne">
							<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
								Menüler
							</button>
						</h2>
						@foreach (var menu in Model.CreateSiparis.Menuler)
						{
							<div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlush">

								<div class="accordion-body">
									<div class="container">
										<div class="row ">
											<input class="form-check-input me-1 col-4" type="checkbox" value="@menu" name="Menuler">
											@menu.MenuAdi

											<input type="number" class="form-control col-4" asp-for="@menu.Adet" />
										</div>
									</div>
								</div>
							</div>
						}
					</div>


					<div class="accordion-item">
						<h2 class="accordion-header" id="flush-headingOne">
							<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseOne">
								Ekstra Malzemeler
							</button>
						</h2>
						@foreach (var ekstraMalzeme in Model.CreateSiparis.EkstraMalzemeler)
						{
							<div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlush">

								<div class="accordion-body">
									<div class="container">
										<div class="row ">
											<input class="form-check-input me-1 col-4" type="checkbox" value="@ekstraMalzeme" name="EkstraMalzemeler">
											@ekstraMalzeme.Adi

											<input type="number" class="form-control col-4" asp-for="@ekstraMalzeme.Adet" />
										</div>
									</div>
								</div>
							</div>
						}
					</div>

				</div>
			</div>
			<button type="submit" class="btn-primary btn-block">Create</button>
		</form>
	</div>
	<div class="card-footer">
	</div>
</div>